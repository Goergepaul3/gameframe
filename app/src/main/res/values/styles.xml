<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/AppTheme.ButtonStyle</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:buttonStyle">@style/AppTheme.Dialog.ButtonStyle</item>
    </style>

    <style name="AppTheme.ButtonStyle" parent="Widget.AppCompat.Button">>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.Dialog.ButtonStyle" parent="Widget.AppCompat.Button">>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>
