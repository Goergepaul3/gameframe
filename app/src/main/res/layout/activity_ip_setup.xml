<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/view_setup_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="@string/enter_ip_address"
            android:layout_marginTop="24dp"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <include layout="@layout/view_ip_text_view"
            android:layout_margin="16dp"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" />

        <Button
            android:id="@+id/view_discover"
            android:drawableLeft="@drawable/ic_perm_scan_wifi_white_48px"
            android:layout_margin="8dp"
            android:padding="16dp"
            android:text="@string/discover_game_frame_ip"
            android:layout_above="@+id/view_setup"
            android:textAllCaps="true"
            android:minHeight="64dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="RtlHardcoded" />

        <Button
            android:id="@+id/view_setup"
            android:layout_margin="8dp"
            android:padding="16dp"
            android:text="@string/setup"
            android:layout_alignParentBottom="true"
            android:textAllCaps="true"
            android:minHeight="64dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/view_setup_progress"
        android:visibility="gone"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="@string/trying_to_find_game_frame"
            android:textSize="12sp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/view_setup_trying_current_ip"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </FrameLayout>
</FrameLayout>