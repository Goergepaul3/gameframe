<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_draw_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.savvasdalkitsis.gameframe.grid.view.LedGridView
            android:id="@+id/view_draw_led_grid_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp" />

        <include
            android:id="@+id/view_draw_palette"
            layout="@layout/view_palette"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_draw_led_grid_view"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="72dp"
            android:layout_marginTop="0dp"
            tools:ignore="RtlHardcoded" />

        <ImageView
            android:id="@+id/view_draw_open_layers"
            style="?attr/actionButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/view_draw_led_grid_view"
            android:layout_below="@id/view_draw_led_grid_view"
            android:src="@drawable/ic_toc_black_48px"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_draw_palette"
            android:layout_marginRight="100dp"
            tools:ignore="RtlHardcoded">

            <LinearLayout
                android:id="@+id/view_draw_tools"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.savvasdalkitsis.gameframe.draw.view.PencilToolView
                    style="?attr/actionButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="ContentDescription,RtlHardcoded" />

                <com.savvasdalkitsis.gameframe.draw.view.FillToolView
                    style="?attr/actionButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="ContentDescription,RtlHardcoded" />

                <com.savvasdalkitsis.gameframe.draw.view.ClearToolView
                    style="?attr/actionButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="ContentDescription,RtlHardcoded" />

                <com.savvasdalkitsis.gameframe.draw.view.EraseToolView
                    style="?attr/actionButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="ContentDescription,RtlHardcoded" />

                <com.savvasdalkitsis.gameframe.draw.view.MoveToolView
                    style="?attr/actionButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="ContentDescription,RtlHardcoded" />

                <com.savvasdalkitsis.gameframe.draw.view.RectangleToolView
                    style="?attr/actionButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="ContentDescription,RtlHardcoded" />

                <com.savvasdalkitsis.gameframe.draw.view.FillRectangleToolView
                    style="?attr/actionButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="ContentDescription,RtlHardcoded" />

                <com.savvasdalkitsis.gameframe.draw.view.OvalToolView
                    style="?attr/actionButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="ContentDescription,RtlHardcoded" />

                <com.savvasdalkitsis.gameframe.draw.view.FillOvalToolView
                    style="?attr/actionButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="ContentDescription,RtlHardcoded" />
            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@android:color/white"
        android:orientation="vertical"
        tools:ignore="RtlHardcoded">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="8dp"
            android:gravity="center_horizontal"
            android:text="@string/layers" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/view_draw_layers"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:scrollbarStyle="insideOverlay"
            android:scrollbars="vertical" />
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>