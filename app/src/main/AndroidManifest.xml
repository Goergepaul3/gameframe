<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.savvasdalkitsis.gameframe">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".GameFrameApplication"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">

        <activity
            android:name=".main.view.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ip.view.IpSetupActivity"
            android:label="@string/setup_ip_address"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustResize"/>

        <service
            android:name=".control.view.PowerTileService"
            android:label="@string/game_frame_power"
            android:icon="@drawable/ic_block_power"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>
        
        <receiver
            android:name=".control.view.PowerWidgetProvider"
            android:label="@string/power">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data android:name="android.appwidget.provider"
                android:resource="@xml/power_appwidget_info" />
        </receiver>

        <receiver
            android:name=".control.view.NextWidgetProvider"
            android:label="@string/next">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data android:name="android.appwidget.provider"
                android:resource="@xml/next_appwidget_info" />
        </receiver>

        <receiver
            android:name=".control.view.MenuWidgetProvider"
            android:label="@string/menu">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data android:name="android.appwidget.provider"
                android:resource="@xml/menu_appwidget_info" />
        </receiver>

    </application>

</manifest>
